@model LegalEagles.Web.Models.Client

@{
    ViewData["Title"] = "Update Client Details";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow" style="width: 900px;">
        <div class="card-body p-4">

            <h5 class="text-warning fw-bold mb-3">Update Client Details</h5>
            <hr />

            <form asp-action="Edit" method="post">

                <input type="hidden" asp-for="Id" />

                <!-- ID -->
                <div class="mb-3">
                    <label class="form-label">ID</label>
                    <input class="form-control w-25" value="@Model.Id.ToString("D5")" disabled />
                </div>

                <!-- First / Last Name -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control border-success" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control border-success" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control border-success" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Email / Mobile / Birth Date -->
                <div class="row mb-4">
                    <div class="col-md-5">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control border-success" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MobileNumber" class="form-label"></label>
                        <input asp-for="MobileNumber" class="form-control border-success" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="BirthDate" class="form-label"></label>
                        <input asp-for="BirthDate" type="date" class="form-control border-success" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">

                    <!-- Delete (opens modal) -->
                    <button type="button"
                            class="btn btn-success"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteClientModal">
                        Delete
                    </button>

                    <!-- Save -->
                    <button type="submit" class="btn btn-success px-4">
                        Save
                    </button>

                </div>
            </form>

        </div>
    </div>
</div>
<div class="modal fade"
     id="deleteClientModal"
     tabindex="-1"
     aria-labelledby="deleteClientModalLabel"
     aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="deleteClientModalLabel">
                    Confirm Delete
                </h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete this client?
                <br />
                <strong>This action cannot be undone.</strong>
            </div>

            <div class="modal-footer">

                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">
                        Delete
                    </button>
                </form>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
